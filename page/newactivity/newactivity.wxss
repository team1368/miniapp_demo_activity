page { 
    background-color: rgba(239,239,239,1);  
}
.page-body-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  background-color: #fff;
  width: 100%;
  padding: 50rpx 0 50rpx 0;
}
.image {
  width: 100%;
  height: 360rpx;
}
.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}